<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IConcealUI.Styles"
                    x:Class="IConcealUI.Styles.TabControlsStyleDictionary">

    <Style x:Key="TabControlTextBlock" TargetType="TextBlock">
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="#2b5797"/>
        <Setter Property="Cursor" Value="Hand"/>

        <EventSetter Event="MouseEnter" Handler="TextBlock_MouseEnter"/>
        <EventSetter Event="MouseLeave" Handler="TextBlock_MouseLeave"/>
        <EventSetter Event="MouseDown" Handler="TextBlock_MouseDown"/>
    </Style>

    <Style x:Key="TabControlHeaders" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#da532c"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Roboto Thin"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>