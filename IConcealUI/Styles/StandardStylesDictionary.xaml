<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:IConcealUI.Styles"
                    x:Class="IConcealUI.Styles.StandardStylesDictionary">

    <Style x:Key="StandardRadioButton" TargetType="RadioButton">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="Foreground" Value="#efefef"/>
        <Setter Property="Margin" Value="20, 10"/>
        <Setter Property="IsChecked" Value="False"/>
    </Style>

    <Style x:Key="Labels" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>

        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Roboto Thin"/>

        <Setter Property="Foreground"  Value="#eff4ff"/>
    </Style>

    <Style x:Key="TextArea" TargetType="TextBox">
        <Setter Property="Height" Value="70"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="AcceptsReturn" Value="True"/>
    </Style>

</ResourceDictionary>